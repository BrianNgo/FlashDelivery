<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
	android:orientation="horizontal"
    tools:context="com.androidexample.delivery.MenuActivity$PlaceholderFragment" >

    <fragment class="com.example.android.apis.app.FragmentLayout$MenuFragment"
            android:id="@+id/menu" android:layout_weight="1"
            android:layout_width="0px" android:layout_height="match_parent" />

    <FrameLayout android:id="@+id/detailMenu" android:layout_weight="1"
            android:layout_width="0px" android:layout_height="match_parent"
            android:background="?android:attr/detailsElementBackground" />

</LinearLayout>
