<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_footer_menu" >
    
    <Button
        android:id="@+id/btnAddCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/normbox"
        android:text="Order"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAddCart"
        android:layout_alignBottom="@+id/btnAddCart"
        android:layout_alignParentLeft="true"
        android:background="@drawable/backbox"
        android:minWidth="70dp"
        android:text="Back"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/quantity"
        android:layout_centerVertical="true"
        android:background="@drawable/normbox"
        android:text="+"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/quantity"
        android:layout_centerVertical="true"
        android:background="@drawable/normbox"
        android:text="-"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Quantity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="16sp" />
	
</RelativeLayout>